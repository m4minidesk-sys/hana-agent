model:
  provider: bedrock
  model_id: us.anthropic.claude-sonnet-4-20250514-v1:0
  region: us-east-1
  max_tokens: 4096

tools:
  shell:
    allowlist:
      - ls
      - cat
      - grep
      - find
      - python3
      - kiro-cli
      - brew
    blocklist:
      - "rm -rf /"
      - "rm -rf ~"
      - "rm -rf $HOME"
      - "rm -rf ."
      - sudo
      - "curl | bash"
      - "wget | bash"
      - eval
      - exec
      - "git push --force"
      - "git push -f"
      - "git reset --hard"
      - "git clean -f"
      - mkfs
      - "dd if="
      - "> /dev/sd"
      - "chmod 777"
      - "chown root"
    timeout_seconds: 30
  
  file:
    workspace_root: ~/.yui/workspace
  
  kiro:
    binary_path: ~/.local/bin/kiro-cli
    timeout_seconds: 300

runtime:
  session:
    compaction_threshold: 0.8
    keep_recent_messages: 5

meeting:
  analysis:
    provider: bedrock
    realtime_enabled: false           # Enable real-time analysis during meetings (~$0.90/hr)
    realtime_interval_seconds: 60     # Analysis interval in seconds
    realtime_window_minutes: 5        # Sliding window size
    max_cost_per_meeting_usd: 2.0     # Budget guard
    minutes_auto_generate: true       # Auto-generate minutes on stop
  output:
    transcript_dir: ~/.yui/meetings/
    format: markdown
    save_audio: false
    slack_notify: true                # Post minutes to Slack
    slack_channel: ""                 # Slack channel ID for notifications
