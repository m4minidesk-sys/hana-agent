model:
  provider: bedrock
  model_id: us.anthropic.claude-sonnet-4-20250514-v1:0
  region: us-east-1
  max_tokens: 4096

tools:
  shell:
    allowlist:
      - ls
      - cat
      - grep
      - find
      - python3
      - kiro-cli
      - brew
    blocklist:
      - "rm -rf /"
      - "rm -rf ~"
      - "rm -rf $HOME"
      - "rm -rf ."
      - sudo
      - "curl | bash"
      - "wget | bash"
      - eval
      - exec
      - "git push --force"
      - "git push -f"
      - "git reset --hard"
      - "git clean -f"
      - mkfs
      - "dd if="
      - "> /dev/sd"
      - "chmod 777"
      - "chown root"
    timeout_seconds: 30
  
  file:
    workspace_root: ~/.yui/workspace
  
  kiro:
    binary_path: ~/.local/bin/kiro-cli
    timeout_seconds: 300

runtime:
  session:
    compaction_threshold: 0.8
    keep_recent_messages: 5
